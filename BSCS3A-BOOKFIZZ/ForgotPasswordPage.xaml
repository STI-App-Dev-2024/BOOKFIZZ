            FontFamily="Lusitana"
            TextColor="Black"/>

        <Label
            Text="Enter Code"
            FontFamily="Lusitana"
            FontSize="17"
            TextColor="#80000000"
            HorizontalOptions="Center"
            Margin="-90.50,18,70,20"/>


        <BoxView
            HeightRequest="1"
            WidthRequest="310"
            Color="Black"
            HorizontalOptions="Center"
            Margin="100,-30,40,30"/>

                

