<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BSCS3A_BOOKFIZZ.AccountPage"
             BackgroundColor="#3B394D"
             Title="AccountPage">
    <AbsoluteLayout>

        <ImageButton
         x:Name="backprofile"
         Clicked="backprofile_Clicked"
         Source="backnotif.png"
         HeightRequest="40"
         WidthRequest="40"
         AbsoluteLayout.LayoutFlags="PositionProportional"
         AbsoluteLayout.LayoutBounds="-0.2,0.1,145,-90"/>

        <Image
        Source="logonotif.png"
        HeightRequest="30"
        WidthRequest="30"
        AbsoluteLayout.LayoutFlags="PositionProportional"
        AbsoluteLayout.LayoutBounds="-0.1,0.1,170,-90"/>

        <Label
        Text="Account"
        FontSize="22"
        FontFamily="Lusitana"
        TextColor="White"
        AbsoluteLayout.LayoutFlags="PositionProportional"
        AbsoluteLayout.LayoutBounds="0.40,0.1,130,510"/>

        <Image
        Source="prof.png"
        WidthRequest="60"
        HeightRequest="60"
        AbsoluteLayout.LayoutFlags="PositionProportional"
        AbsoluteLayout.LayoutBounds="1.25,0,530,220" />
        
        <Label
            Text="UserName"
            TextColor="White"
            FontSize="20"
            FontFamily="Lusitana"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            AbsoluteLayout.LayoutBounds="-1,2,455,678"/>
        
        <Label
            Text="Name@gmail.com"
            TextColor="White"
            FontSize="15"
            FontFamily="Lusitana"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            AbsoluteLayout.LayoutBounds="-1,1,455,610"/>

        <BoxView
            HeightRequest="1"
            WidthRequest="600"
            Color="White"
            HorizontalOptions="Center"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            AbsoluteLayout.LayoutBounds="-0.9,0,400,320"/>

        <StackLayout>

            <Label
           Text="Name@gmail.com"
           TextColor="White"
           FontSize="15"
           FontFamily="Lusitana"
           Margin="15,230,300,100"/>

            <Image
               Source="accprof.png"
               WidthRequest="30"
               HeightRequest="30"
               Margin="-15,-200,500,-300"/>

        </StackLayout>







    </AbsoluteLayout>
</ContentPage>