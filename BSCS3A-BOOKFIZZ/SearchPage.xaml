<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BSCS3A_BOOKFIZZ.SearchPage"
             BackgroundColor="#3B394D">

    <AbsoluteLayout>
        
        <ImageButton
 
 Source="backnotif.png"
 HeightRequest="40"
 WidthRequest="40"
 AbsoluteLayout.LayoutFlags="PositionProportional"
 AbsoluteLayout.LayoutBounds="-0.2,0.1,145,-90"/>
        
        <Frame
 CornerRadius="30"
 HeightRequest="50"
 WidthRequest="300"
 BackgroundColor="#F9B14A"
 BorderColor="#F9B14A"
 AbsoluteLayout.LayoutFlags="PositionProportional"
 AbsoluteLayout.LayoutBounds="0.20,0.2,430,-350"/>

        <ImageButton
 x:Name="Searchpage"
 Source="see.png"
 Clicked="Searchpage_Clicked"
 WidthRequest="35"
 HeightRequest="35"
 AbsoluteLayout.LayoutFlags="PositionProportional"
 AbsoluteLayout.LayoutBounds="0.10,0.2,120,-350"/>

        <ImageButton
            Source="xx.png"
            WidthRequest="30"
            HeightRequest="30"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            AbsoluteLayout.LayoutBounds="0.10,0.2,120,-350"/>


        <Label
x:Name="search"
Text="Search"
TextColor="Black"
FontSize="20"
FontFamily="Lusitana"
AbsoluteLayout.LayoutFlags="PositionProportional"
AbsoluteLayout.LayoutBounds="-1.50,0.385,400,225" />
        
    </AbsoluteLayout>
</ContentPage>