<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookFizz.LoginPage"
             BackgroundColor="#F9B14A">

    <StackLayout Padding="30">
        <Label Text="Welcome to BookFizz" FontSize="24" HorizontalOptions="Center" />
        <Label Text="Email or Username" FontSize="24" HorizontalOptions="Center" />
        <Entry x:Name="UsernameEntry" Placeholder="Enter Email or Username" />
        <Label Text="Password" FontSize="24" HorizontalOptions="Center" />
        <Entry x:Name="PasswordEntry" Placeholder="Enter Password" IsPassword="True" />

        <Button Text="Login" 
                Clicked="OnLoginClicked" 
                BackgroundColor="#2D3340" 
                TextColor="White"
                FontAttributes="Bold" 
                FontSize="23"
                CornerRadius="10"/>
    </StackLayout>
</ContentPage>
